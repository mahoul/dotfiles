# start web browser
# %%hotkey: Start web browser %%
bindsym $mod+Shift+Return exec gtk-launch $(xdg-settings get default-web-browser)

# launch command
# %%hotkey: Run command %%
bindsym $mod+F2 exec rofi -show run

## %%hotkey: Show this list %%
#bindsym $mod+a exec dmenu_hotkeys.py i3

# launch app
# %%hotkey: Show app launcher  %%
bindsym $mod+space exec rofi -show drun

# launch window by name
# %%hotkey: Show window selector %%
