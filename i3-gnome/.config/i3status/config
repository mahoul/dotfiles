# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

#order += "ipv6"
order += "read_file hostname"
order += "tztime date"
order += "tztime time"
#order += "battery all"
#order += "disk /"
#order += "memory"
order += "cpu_usage"
order += "cpu_temperature all"
order += "read_file fan_speed"
#order += "load"
order += "ethernet tun0"
order += "wireless _first_"
order += "ethernet _first_"
#order += "read_file kaka"

ethernet tun0 {
        format_up = " %ip"
        format_down = ""
}

wireless _first_ {
#        format_up = " %ip %quality %essid"
        format_up = " %ip"
        format_down = ""
}

ethernet _first_ {
#        format_up = " %ip (%speed)"
        format_up = "  %ip     "
        format_down = ""
	separator = true
	separator_block_width = 60
}

battery all {
        format = " %status %percentage %remaining"
	separator = false
	separator_block_width = 30
}

disk "/" {
        format = " %used / %total"
#	separator = false
	separator_block_width = 15
}

memory {
        format = " %used / %total"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
	separator = false
	separator_block_width = 30
}

cpu_usage {
	format = " %usage  "
}

cpu_temperature all {
	format = "   %degrees °C"
#	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
	path = "/sys/devices/platform/thinkpad_hwmon/hwmon/hwmon*/temp1_input"
	separator = true
	separator_block_width = 30
}

read_file fan_speed {
	format = "%content RPM"
	path = "/tmp/fan1_input"
	separator = false
	separator_block_width = 30
}

load {
        format = "%1min"
}


tztime date {
#        format = "%Y-%m-%d %A %H:%M:%S"
#        format = " %a, %d %b %Y   |    %H:%M "
#        format = "  %a, %d %b %Y "
        locale = en_IE.UTF-8
        format = " %a, %d %b %Y  -"
	separator = false
}

tztime time {
#        format = "  %H:%M "
        format = "%H:%M "
	separator = false
	separator_block_width = 240

}

read_file hostname { 
	format = "   %content   "
	path = "/etc/hostname"
}

read_file kaka {
	#format = "   %content   "
	#format = "%content"
	#format = " picom! "
	format = "     "
	format_bad = ""
	path = "/tmp/picom_egil397.pid"
}

